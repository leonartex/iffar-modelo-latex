%%%%
%%  Configurando a formatação do título de seção
%%%%
%Exemplo: \titleformat{command}[shape]{format}{label}{sep}{before-code}[after-code]
%Seção primária
\titleformat{\section}[block]
{\raggedright\normalfont\normalsize\bfseries}{\thesection}{1ex}{\MakeUppercase}

%Seção secundária
\titleformat{\subsection}[block]
{\raggedright\normalfont\normalsize\MakeUppercase}{\thesubsection}{1ex}{\MakeUppercase}

%Seção terciária
\titleformat{\subsubsection}[block]
{\raggedright\normalfont\normalsize\bfseries}{\thesubsubsection}{1ex}{}

%Seção quaternária
\titleformat{\paragraph}[block]
{\raggedright\normalfont\normalsize\itshape}{\theparagraph}{1ex}{}
% \titlespacing*{\paragraph}
% {0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}

%Seção quinária
\titleformat{\subparagraph}[block]
{\raggedright\normalfont\normalsize}{\thesubparagraph}{1ex}{}
% \titlespacing*{\subparagraph}
% {0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}


%%%%
%%  Configurando o espaçamento entre título de seção e texto
%%%%
%Seção primária
\titlespacing* % starred version: first paragraph is not indented
    {\section} % <command>
    {0cm} % <left>
    {\baselineskip} % <before-sep>
    {\baselineskip} % <after-sep>

%Seção secundária
\titlespacing* % starred version: first paragraph is not indented
    {\subsection} % <command>
    {0cm} % <left>
    {\baselineskip} % <before-sep>
    {\baselineskip} % <after-sep>

%Seção terciária
\titlespacing* % starred version: first paragraph is not indented
    {\subsubsection} % <command>
    {0cm} % <left>
    {\baselineskip} % <before-sep>
    {\baselineskip} % <after-sep>

%Seção quaternária
\titlespacing* % starred version: first paragraph is not indented
    {\paragraph} % <command>
    {0cm} % <left>
    {\baselineskip} % <before-sep>
    {\baselineskip} % <after-sep>

%Seção quinária

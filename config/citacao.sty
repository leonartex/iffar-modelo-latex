% Criação do ambiente para citações longas, seguindo as normas da ABNT
% Recuo necessário: 4cm
% Área total de escrita: 16cm
% Espaço restante: 12cm
\newenvironment{abntquote}{

\begin{singlespace}%
\footnotesize%
% \vspace{\baselineskip}%
\hspace{\fill}%
\begin{minipage}{12cm}%
}{
\end{minipage}%
% \vspace{\baselineskip}%
\end{singlespace}

}
\SetBlockEnvironment{abntquote}